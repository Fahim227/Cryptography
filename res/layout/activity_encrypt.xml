<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:weightSum="7"
    tools:context=".Encrypt"
    android:background="@drawable/activity"
    >

    <EditText
        android:id="@+id/encryptedittext"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="Enter your Messege.."
        android:textColorHint="#E1EDEC"
        android:textSize="30dp"
        android:textColor="#E1EDEC"
        />
    <Button
        android:id="@+id/encryptbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/en"
        android:background="@drawable/custom_button"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"


        />
    <TextView
        android:id="@+id/encrypttextview"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="@drawable/text_border"
        android:layout_height="0dp"
        android:text="Here the Result"
        android:textSize="30dp"
        android:textColor="#42C2DC"
        android:textStyle="bold"

        />

</LinearLayout>